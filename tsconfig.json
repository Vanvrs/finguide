
/* Garante que o TypeScript resolva módulos de forma compatível com Node.js.
Removemos a necessidade de extensões .js nos imports. */


{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "ES6",
    "target": "ES6",
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "include": ["src/**/*"]
}